@model S01_PersonalBlog.ViewModels.CreateCommentViewModel

@{
    ViewBag.Title = "Create";
    ViewBag.PageClass = ViewBag.PageId = "comments-create-page";
}

<div id="create-comment-page">
    <h2>Comment</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">Write your comment here <span class="glyphicon glyphicon-arrow-down"></span></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <ul class="pager">
        <li class="previous">
            @Html.RouteLink("< Back", "Post", new {action = "Details", id = Model.PostID })
        </li>
    </ul>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
